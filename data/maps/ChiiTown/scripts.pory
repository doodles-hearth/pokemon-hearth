script ChiiTown_EventScript_EatingBerries {
	lock
	faceplayer
	speakername("Twin girl")
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_SCHOOL_KID_F EMOTE_NORMAL}Sensei said that we should eat berries to grow big and strong!\p"
		"But how are we supposed to get them if we aren't big and strong yet?"
	), MSGBOX_DEFAULT)
	closemessage

	if(checkitem(ITEM_ORAN_BERRY, 1)){
		msgbox(format(
			"Give the girl an Oran Berry?"
		))

		mcdialogue(
			"Give",
			"Don't give"
		)

		if(var(VAR_RESULT) == 0){
			removeitem(ITEM_ORAN_BERRY)
			speakername("Twin girl")
			msgbox(format(
				"{CREATE_MUGSHOT MUGSHOT_SCHOOL_KID_F EMOTE_NORMAL}Oh my gosh, thank you!"
			), MSGBOX_DEFAULT)
			closemessage

			addvar(VAR_PLAYER_REPUTATION, 1)
		}
	}
	closemessage
	applymovement(VAR_LAST_TALKED, Common_Movement_FaceOriginalDirection)
	waitmovement(0)
	release
}

