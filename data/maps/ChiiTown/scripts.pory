}

script ChiiTown_EventScript_MomDroppingOff{
	gettimeofday
	speakername("Woman")
	switch(var(VAR_TIME_OF_DAY)){
		case TIME_MORNING:
			msgbox(format(
				"I'm dropping off my children to school.\p"
				"With all the recent Pokémon attacks, I will not let them leave my sight!"
			), MSGBOX_NPC)	
		case TIME_NOONTIME:
			msgbox(format(
				"I'm waiting to pick up my children after school.\p"
				"With all the recent Pokémon attacks, I will not let them leave my sight!"
			), MSGBOX_NPC)
	}
}

