script ChiiTown_EventScript_BattlingGirl {
	lock
	faceplayer

	if (flag(FLAG_BEAT_CHII_TOWN_KIDS)) {
		special(GetPlayerMrMrsString)
		speakername("Little girl")
		msgbox(format(
			"{CREATE_MUGSHOT MUGSHOT_SCHOOL_KID_F EMOTE_NORMAL}Wow, {STR_VAR_1}! You're super strong!!\p"
			"I'll have to train Snuggles a whole lot more!"
		))
		closemessage
	} else {
			
		// From bottom
		if (var(VAR_FACING) == DIR_NORTH) {
			applymovement(LOCALID_BATTLING_BOY, moves(face_down))
			// From left
		} else {
			applymovement(LOCALID_BATTLING_BOY, moves(face_left))
		}
		waitmovement(0)
		
		special(GetPlayerMrMrsString)
		speakername("Little girl")
		msgbox(format(
			"{CREATE_MUGSHOT MUGSHOT_SCHOOL_KID_F EMOTE_NORMAL}Hey {STR_VAR_1}! We've been studying Pokémon battles in class. Wanna fight with us?"
		))
		mcdialogue(
			"Sure!",
			"I don't want to."
		)
		closemessage

		if(var(VAR_RESULT) == 0) {
			trainerbattle_two_trainers(
				TRAINER_MINORI,
				format("Whaaaat?!"),
				TRAINER_KAITO,
				format("Well I never learned about THAT!")
			)
			setflag(FLAG_BEAT_CHII_TOWN_KIDS)

			special(GetPlayerMrMrsString)
			speakername("Little girl")
			msgbox(format(
				"{CREATE_MUGSHOT MUGSHOT_SCHOOL_KID_F EMOTE_NORMAL}Wow, {STR_VAR_1}! You're super strong!!\p"
				"I'll have to train Snuggles a whole lot more!"
			))
			closemessage

			// TODO EVA reward?
		} else {
			speakername("Little girl")
			msgbox(format(
				"{CREATE_MUGSHOT MUGSHOT_SCHOOL_KID_F EMOTE_NORMAL}Ughhhh, older kids are so boooring!"
			))
			closemessage
		}

		applymovement(VAR_LAST_TALKED, Common_Movement_FaceOriginalDirection)
		applymovement(LOCALID_BATTLING_BOY, moves(face_left))
		waitmovement(0)
	}
	release
}

