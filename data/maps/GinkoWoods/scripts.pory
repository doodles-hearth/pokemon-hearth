	end
}

script GinkoWoods_EventScript_Bean {
	lock

	applymovement(VAR_LAST_TALKED, moves(emote_music, delay_16 * 6))
	waitmovement(VAR_LAST_TALKED)

	faceplayer

	setspeaker("Odd Girl")
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_HARIKO EMOTE_NORMAL}Hello!"
	))
	closemessage

	delay(48)

	turnobject(LOCALID_BEAN, DIR_EAST)

	setspeaker("Odd Girl")
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_HARIKO EMOTE_NORMAL}I just noticed there are some neat tracks in the dirt here."
	))
	closemessage

	turnobject(LOCALID_BEAN, DIR_SOUTH)
	
	delay(48)

	setspeaker("Odd Girl")
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_HARIKO EMOTE_NORMAL}It looks like a small mammal's footprints, see?\p"
		"Studying Pokémon tracks is so fascinating. One can find out about a Pokémon's nesting place, their hunting habits, at what time they sleep, what they eat… Interesting, isn't it?\p"
		"These woods host a lot of yellow Pokémon, so I'd bet these are a Kotora's."
		"Do you know why there's a lot of yellow Pokémon here? Well, that's because smaller Pokémon can easily hide from predators in the foliage, and said predators can stalk their prey without being seen."
		"Additionally, the high concentration of electric-type Pokémon, which seems to have happened fortuitously, explains the unnaturally high static electricity in the air here."
		"Some of the non-electric Pokémon that live here have adapted by developing specific traits, like the Sewaddle you've probably seen on your way here that blah, blah blah blah blah, blah blah…"
	))
	closemessage

	fadescreenswapbuffers(FADE_TO_BLACK)

	addtime(0, 1, 30)
	delay(60)

	fadescreenswapbuffers(FADE_FROM_BLACK)

	delay(48)

	setspeaker("Odd Girl")
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_HARIKO EMOTE_NORMAL}…And that's all that is currently known about Joltik's habitat during the winter.\p"
		"Neat, isn't it?"
	))

	dynmultichoice(
		0,
		0,
		TRUE,
		10,
		0,
		DYN_MULTICHOICE_CB_NONE,
		"… …Yes?",
		"Do I know you?",
		"I was just passing through…"
	)
	closemessage
	setspeaker(SP_NAME_HARIKO)

	switch(var(VAR_RESULT)) {
		case 0:
			msgbox(format(
				"{CREATE_MUGSHOT MUGSHOT_HARIKO EMOTE_NORMAL}Right! I am glad you share my interest in Pokémon habitat.\p"
				"I am Hariko. And what is your name?\p"
				"{PLAYER}.\nIt has been nice chatting with you.\NI will see you around, then.\p"
				"Okay. Bye!"
			))
		case 1:
			msgbox(format(
				"{CREATE_MUGSHOT MUGSHOT_HARIKO EMOTE_NORMAL}Right!\nI haven't introduced myself yet.\p"
				"I am Hariko. And what is your name?\p"
				"{PLAYER}.\nIt has been nice chatting with you.\NI will see you around, then.\p"
				"Okay. Bye!"
			))
		case 2:
			applymovement(VAR_LAST_TALKED, moves(emote_pensive))
			msgbox(format(
				"{CREATE_MUGSHOT MUGSHOT_HARIKO EMOTE_NORMAL}…Oh. I am blocking your path. I see.\p"
				"I got carried away, have I not?\nThat… tends to happen.\p"
				"I am Hariko. And what is your name?\p"
				"{PLAYER}.\nIt has been nice chatting with you.\NI am moving now, so that you can go through.\p"
				"I will see you around, then.\p"
				"Okay. Bye!"
			))
	}
	closemessage

	applymovement(LOCALID_BEAN, GinkoWoods_Movement_BeanWalksAway)
	waitmovement(0)
	removeobject(LOCALID_BEAN)
	setflag(FLAG_HIDE_BEAN_GINKO_WOODS)

	release
}

movement GinkoWoods_Movement_BeanWalksAway {
	walk_up * 7
}

script GinkoWoods_EventScript_Tracks {
	lock
	
	playse(SE_PIN)
	applymovement(LOCALID_BEAN, Common_Movement_ExclamationMark)
	waitse
	waitmovement(0)
	delay(48)
	applymovement(LOCALID_BEAN, Common_Movement_WalkInPlaceFasterRight)
	turnobject(OBJ_EVENT_ID_PLAYER, DIR_WEST)

	applymovement(VAR_LAST_TALKED, moves(emote_upset))
	setspeaker("Odd Girl")
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_HARIKO EMOTE_NORMAL}THE TRACKS!!\nYOU'RE STEPPING ON THEM!!!"
	))
	closemessage

	applymovement(OBJ_EVENT_ID_PLAYER, GinkoWoods_Movement_PlayerWalkDown)
	waitmovement(0)

	release
}

movement GinkoWoods_Movement_PlayerWalkDown {
	walk_down
}

