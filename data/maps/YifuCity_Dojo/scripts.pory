    if (var(VAR_RESULT) == 2) {
        playse(SE_SUCCESS)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "You are correct!\p"
            "Very well.\nYou may proceed to the next room."
        ))
        closemessage

        setvar(VAR_YIFU_DOJO_STATE, 2)

        call(YifuCity_Dojo_Dance2_GeishasGoDirectlyToDoor)
    } else {
        playse(SE_FAILURE)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "You are incorrect!\p"
            "We shall face you in battle before you proceed."
        ))
        closemessage

        call(YifuCity_Dojo_Dance2_GeishasSurroundPlayerToBattle)

        trainerbattle_two_trainers(
            TRAINER_KARIN,
            format("I liked the dancing part better…"),
            TRAINER_MIIKA,
            format("Oh, well.")
        )

        setvar(VAR_YIFU_DOJO_STATE, 2)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "Very well! You may now proceed."
        ))
        closemessage

        // They walk up to the door
        applymovement(LOCALID_YIFU_GEISHA_5, moves(
            walk_down
            walk_right * 7
            walk_up
            face_right
        ))
        applymovement(LOCALID_YIFU_GEISHA_6, moves(
            walk_right * 8
            face_left
        ))

        // Camera follows
        special(SpawnCameraObject)
        applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_right * 4))

        waitmovement(LOCALID_YIFU_GEISHA_5)
        waitmovement(LOCALID_YIFU_GEISHA_6)
	    waitmovement(OBJ_EVENT_ID_CAMERA)
    }

    delay(32)

    // Door appears
    call(YifuCity_Dojo_SetDoor2Metatiles)

    call(YifuCity_Dojo_DoorAppears_Screenshake)

    applymovement(LOCALID_YIFU_GEISHA_5, Common_Movement_WalkInPlaceFasterDown)
    applymovement(LOCALID_YIFU_GEISHA_6, Common_Movement_WalkInPlaceFasterDown)
    waitmovement(LOCALID_YIFU_GEISHA_5)
    waitmovement(LOCALID_YIFU_GEISHA_6)
    waitse

    delay(32)
    
    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_left * 4))
    waitmovement(OBJ_EVENT_ID_CAMERA)
    special(RemoveCameraObject)

    release
