script YifuCity_Dojo_DoorAppears_Screenshake {
    setvar(VAR_0x8004, 1)  // vertical pan
    setvar(VAR_0x8005, 1)  // horizontal pan
    setvar(VAR_0x8006, 2)  // num shakes
    setvar(VAR_0x8007, 4)  // shake delay
    special(ShakeCamera)
    playse(SE_UNLOCK)
}

