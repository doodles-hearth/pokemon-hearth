script YifuCity_Dojo_EventScript_Dance1 {
    setspeaker(SP_NAME_KIMONO_GIRLS)
    msgbox((
        "Welcome to the Yifu City Dojo.\p"
        "You will have the pleasure to watch\nthree different dances, at the end of\lwhich you will be asked a question.\p"
        "The first dance will soon commence!\nSee the dancer on the left.\lKeep your eyes on her!\p"
        "If you know where she is by the end of\nour dance, we shall let you through.\p"
        "If you guess wrong, you will have to\nbattle us.\lAre you ready? One, two…"
    ))
    closemessage

    special(SpawnCameraObject)
	applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_up * 2, delay_16 * 2))
	waitmovement(0)

    call(YifuCity_Dojo_Dance1)

    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_down * 2, delay_16 * 2))
	waitmovement(0)
    special(RemoveCameraObject)

    setspeaker(SP_NAME_KIMONO_GIRLS)
    msgbox(format(
        "Well? Which dancer is the one who was originally on the left?"
    ))

    dynmultichoice(
        0,
        0,
        TRUE,
        10,
        0,
        DYN_MULTICHOICE_CB_NONE,
        "The left one.",
        "The middle one.",
        "The right one."
    )
    closemessage

    call(YifuCity_Dojo_Dance1_Jump)

    if (var(VAR_RESULT) == 1) {
        playse(SE_SUCCESS)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "You are correct!\p"
            "Very well.\nYou may proceed to the next room."
        ))
        closemessage

        setvar(VAR_YIFU_DOJO_STATE, 1)

        call(YifuCity_Dojo_Dance1_GeishasGoDirectlyToDoor)
    } else {
        playse(SE_FAILURE)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "You are incorrect!\p"
            "We shall face you in battle before you proceed."
        ))
        closemessage

        call(YifuCity_Dojo_Dance1_GeishasSurroundPlayerToBattle)

        trainerbattle_two_trainers(
            TRAINER_AKARI,
            format("Oh!"),
            TRAINER_YUKA,
            format("I see.")
        )

        setvar(VAR_YIFU_DOJO_STATE, 1)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "Very well! You may now proceed."
        ))
        closemessage

        // They walk up to the door
        applymovement(LOCALID_YIFU_GEISHA_2, moves(
            walk_down
            walk_right * 7
            walk_up
            face_right
        ))
        applymovement(LOCALID_YIFU_GEISHA_3, moves(
            walk_right * 8
            face_left
        ))

        // Camera follows
        special(SpawnCameraObject)
        applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_right * 4))

        waitmovement(LOCALID_YIFU_GEISHA_2)
        waitmovement(LOCALID_YIFU_GEISHA_3)
	    waitmovement(OBJ_EVENT_ID_CAMERA)
    }

    delay(32)

    // Door appears
    call(YifuCity_Dojo_SetDoor1Metatiles)

    call(YifuCity_Dojo_DoorAppears_Screenshake)

    applymovement(LOCALID_YIFU_GEISHA_2, Common_Movement_WalkInPlaceFasterDown)
    applymovement(LOCALID_YIFU_GEISHA_3, Common_Movement_WalkInPlaceFasterDown)
    waitmovement(LOCALID_YIFU_GEISHA_2)
    waitmovement(LOCALID_YIFU_GEISHA_3)
    waitse

    delay(32)
    
    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_left * 4))
    waitmovement(OBJ_EVENT_ID_CAMERA)
    special(RemoveCameraObject)

    release
}

script YifuCity_Dojo_EventScript_Dance2 {
    setspeaker(SP_NAME_KIMONO_GIRLS)
    msgbox((
        "This time, we won't tell you which\ndancer you need to keep track of.\p"
        "Are you ready for the second dance?\nFollow each of our moves…\lOne, two, three!"
    ))
    closemessage

    special(SpawnCameraObject)
	applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_up * 2, delay_16 * 2))
	waitmovement(0)

    call(YifuCity_Dojo_Dance2)

    delay(48)

    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_down * 2, delay_16 * 2))
	waitmovement(0)
    special(RemoveCameraObject)

    setspeaker(SP_NAME_KIMONO_GIRLS)
    msgbox(format(
        "The dancer on the right…\nWhere was she originally?"
    ))

    mcdialogue(
        "She was on the left.",
        "She was in the middle.",
        "She was on the right."
    )
