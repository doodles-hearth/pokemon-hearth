script YifuCity_Dojo_EventScript_Dance3 {
    setspeaker(SP_NAME_KIMONO_GIRLS)
    msgbox((
        "For the third and final dance, we won't\nask you about a dancer's position.\l"
        "Just pay attention to our actions!\p"
        "One, two, three, four."
    ))
    closemessage

    special(SpawnCameraObject)
	applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_up * 2, delay_16 * 2))
	waitmovement(0)

    call(YifuCity_Dojo_Dance3)

    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_down * 2, delay_16 * 2))
	waitmovement(0)
    special(RemoveCameraObject)

    setspeaker(SP_NAME_KIMONO_GIRLS)
    msgbox(format(
        "Can you tell us how many jumps there were in this dance?"
    ))

    dynmultichoice(
        0,
        0,
        TRUE,
        10,
        0,
        DYN_MULTICHOICE_CB_NONE,
        "Five.",
        "Six.",
        "Seven."
    )
    closemessage

    call(YifuCity_Dojo_Dance3_Jump)

    if (var(VAR_RESULT) == 0) {
        playse(SE_SUCCESS)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "You are correct!\p"
            "Very well.\nYou may proceed to the last room."
        ))
        closemessage

        setvar(VAR_YIFU_DOJO_STATE, 3)

        call(YifuCity_Dojo_Dance3_GeishasGoDirectlyToDoor)
    } else {
        playse(SE_FAILURE)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "You are incorrect!\p"
            "We shall face you in battle before you proceed."
        ))
        closemessage

        call(YifuCity_Dojo_Dance3_GeishasSurroundPlayerToBattle)

        trainerbattle_two_trainers(
            TRAINER_NANAMI,
            format("Pant… Hey, let me catch my breath!"),
            TRAINER_KANAE,
            format("You didn't see me trip over my own foot, did you?")
        )

        setvar(VAR_YIFU_DOJO_STATE, 3)

        setspeaker(SP_NAME_KIMONO_GIRLS)
        msgbox(format(
            "Very well! You may now proceed."
        ))
        closemessage

        // They walk up to the door
        applymovement(LOCALID_YIFU_GEISHA_7, moves(walk_up, face_left))
        applymovement(LOCALID_YIFU_GEISHA_10, moves(walk_up, face_right))
        playse(SE_LEDGE)
        applymovement(LOCALID_YIFU_GEISHA_9, moves(
            jump_2_up,
            walk_up,
            face_right
        ))
        applymovement(LOCALID_YIFU_GEISHA_8, moves(
            jump_2_up,
            walk_right,
            walk_up,
            face_left
        ))

        // Camera follows
        special(SpawnCameraObject)
        applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_up * 2))

        waitmovement(LOCALID_YIFU_GEISHA_10)
        applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_down * 2))
	    waitmovement(OBJ_EVENT_ID_CAMERA)
    }

    delay(32)

    // Door appears
    call(YifuCity_Dojo_SetDoor3Metatiles)

    call(YifuCity_Dojo_DoorAppears_Screenshake)

    applymovement(LOCALID_YIFU_GEISHA_4, Common_Movement_WalkInPlaceFasterDown)
    applymovement(LOCALID_YIFU_GEISHA_6, Common_Movement_WalkInPlaceFasterDown)
    waitmovement(LOCALID_YIFU_GEISHA_4)
    waitmovement(LOCALID_YIFU_GEISHA_6)
    waitse

    delay(32)
    
    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_down * 2))
    waitmovement(OBJ_EVENT_ID_CAMERA)
    special(RemoveCameraObject)

    release
}

