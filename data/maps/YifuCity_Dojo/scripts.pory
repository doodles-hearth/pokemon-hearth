        setspeaker(SP_NAME_YUTAKA)
        msgbox(format(
            "{CREATE_MUGSHOT MUGSHOT_YUTAKA EMOTE_NORMAL}Well done! Welcome to Yifu City's Doj-"
        ))

        applymovement(VAR_LAST_TALKED, Common_Movement_ExclamationMark)
        playse(SE_PIN)
        waitmovement(0)
        waitse
        delay(48)
    }

	trainerbattle_single(
		TRAINER_YUTAKA_1,
		format(
            "Excuse me, what is this?\p"
            "Is there a reason for the\n"
            "accoutrement you're donning?\p"
            "A carnival, perhaps?\nOr have you lost a bet?\p"
            "Or do you just lack a basic sense of style to such an extreme degree?\p"
            "Here you are, parading around\n"
            "in your peasant's clothes…\p"
            "(…Yutaka, you must not let this\n"
            "offend you so!\l"
            "You are stronger than that!)\p"
            "Ahem… Let us move on…\p"
            "You shall be fighting my exquisite assortment of Pokémon,\l"
            "in the hopes of obtaining\l"
            "an official Token from me.\p"
            "Try not to be too overwhelmed by my strength and, most of all, by my impeccable sense of fashion.\p"
            "Let this battle begin!"
		),
		format("How dare you!"),
		YifuCity_Dojo_EventScript_YutakaDefeated,
		NO_MUSIC
	)
    
	setspeaker(SP_NAME_YUTAKA)
    msgbox(format(
        "{CREATE_MUGSHOT MUGSHOT_YUTAKA EMOTE_NORMAL}You shall achieve great things,\ndespite your fashion faux-pas.\p"
        "I hope to battle you again."
	))

    release
	end
}

script YifuCity_Dojo_EventScript_YutakaDefeated {
    // removespeakername
	message(format(
		"{PLAYER} received the Silk Token from Yutaka."
	))
	waitmessage
	call(Common_EventScript_PlayGymBadgeFanfare)

    setspeaker(SP_NAME_YUTAKA)
	msgbox(
		format(
            "{CREATE_MUGSHOT MUGSHOT_YUTAKA EMOTE_NORMAL}I am outrée! Your techniques are rough and vulgar, yet…\p"
            "Victory is yours…\nThat is undeniable.\p"
			"I guess what you lack in aesthetic values, you compensate in strength.\p"
			"Do accept this, as well."
		),
		MSGBOX_DEFAULT
	)
    closemessage
	
	giveitem(ITEM_TM_X_SCISSOR)

    setspeaker(SP_NAME_YUTAKA)
	msgbox(
		format(
			"{CREATE_MUGSHOT MUGSHOT_YUTAKA EMOTE_NORMAL}This scroll contains my famous X-Scissor technique.\p"
            "I perfected it back when I worked as a seamstress.\p"
			"About that, uh… We should go clothes-shopping together sometime.\p"
            "I cannot bear to see your image suffer so."
		)
	)
	closemessage

	setflag(FLAG_BADGE03_GET)
	setvar(VAR_0x8008, 3)
	call(Common_EventScript_SetGymTrainers)
	addvar(VAR_PLAYER_REPUTATION, 5)

    // Door appears
    call(YifuCity_Dojo_SetShortcutMetatiles)

    call(YifuCity_Dojo_DoorAppears_Screenshake)

    delay(48)

	release
	end
}