script(local) StringVarSetterFishSalesman {
	getweekday
	switch(var(VAR_RESULT)) {
		case WEEKDAY_WED:
			bufferstring(STR_VAR_1, "on Friday")
			return
		case WEEKDAY_FRI:
			bufferstring(STR_VAR_1, "on Sunday")
			return
		case WEEKDAY_SUN:
			bufferstring(STR_VAR_1, "tomorrow")
			return
		case WEEKDAY_MON:
			bufferstring(STR_VAR_1, "on Wednesday")
			return
	}
}

