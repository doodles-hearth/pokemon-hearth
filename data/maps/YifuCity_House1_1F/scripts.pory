script YifuCity_House1_1F_EventScript_Dad {
	lock
	faceplayer
	setspeaker(SP_NAME_MAN)
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_UUME_MAN_2 EMOTE_NORMAL}Our kids are constantly yelling and running and bickering…\p"
		"I can't ever get anything done!"
	))
	closemessage
	release	
}

script YifuCity_House1_1F_EventScript_Mom {
	lock
	faceplayer
	setspeaker(SP_NAME_WOMAN)
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_UUME_WOMAN_2 EMOTE_NORMAL}I bought the children two different dolls at the festival in Hanabi City…\p"
		"But now they're fighting over who has which!\p"
		"I should have gotten two identical dolls…"
	))
	closemessage
	release	
}