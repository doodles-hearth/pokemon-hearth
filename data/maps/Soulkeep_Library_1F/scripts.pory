// KIDLIT

script Soulkeep_Library_1F_EventScript_Book_Ditto {
	lock
	setnamedmon(SPECIES_DITTO)
	msgbox((
		"“The Lonely Ditto”.\nRead this?"
	))

	dynmultichoice(
		0,
		0,
		FALSE,
		10,
		0,
		DYN_MULTICHOICE_CB_NONE,
		"Read",
		"Put back"
	)
	closemessage

	if (var(VAR_RESULT) == 0) {
		msgbox((
			"“There once was a lonely Ditto, who\ndesperatly seeked a friend.\p"
			"It met a Joltik and became tiny and\n"
			"yellow, but the Joltik got spooked\l"
			"and scurried away.\p"
			"It met a Nidorina and became spiky\n"
			"and blue, but the Nidorina got angry\l"
			"and rammed it with its horn.\p"
			"Finally it met a little girl, who said:\n"
			"You need not change to look like me,\l"
			"for I like you just the way you are!\p"
			"The Ditto's heart overflowed with\n"
			"happiness, and they remained together\lforever.”"
		))
		closemessage

		setnamedmon(SPECIES_JOLTIK)
		setnamedmon(SPECIES_NIDORINA)
	}
	
	release
}

