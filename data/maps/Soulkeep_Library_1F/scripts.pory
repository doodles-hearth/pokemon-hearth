// FOOD

script Soulkeep_Library_1F_EventScript_Book_Recipe {
	lock
	msgbox((
		"“Traditional Recipes”.\nRead this?"
	))

	dynmultichoice(
		0,
		0,
		FALSE,
		10,
		0,
		DYN_MULTICHOICE_CB_NONE,
		"Read",
		"Put back"
	)
	closemessage

	if (var(VAR_RESULT) == 0) {
		msgbox((
			"“Shiftry Leaf-wrapped Uume Berry\n"
			"1. Rub Uume Berries with a Salt Cube.\p"
			"2. Sun-dry for two to three days.\n"
			"3. Carefully wrap in Shiftry Leaves.\p"
			"4. Steam for ten minutes.\n"
			"5. Serve warm or room-temperature.”\p"
			"{PLAYER} is getting hungry…"
		))
		closemessage

		setnamedmon(SPECIES_SHIFTRY)
	}
	
	release
}

