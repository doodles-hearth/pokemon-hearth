script Soulkeep_Library_1F_EventScript_Employee {
	lock
	faceplayer
	setspeaker("Librarian")
	msgbox(format(
		"{CREATE_MUGSHOT MUGSHOT_UUME_VALET 0}{FONT_SMALL}Hello, welcome to the library.\nPlease don't speak too loud.{FONT_NORMAL}"
	))
	closemessage
	release
}

script Soulkeep_Library_1F_EventScript_Man {
