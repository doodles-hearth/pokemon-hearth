script YifuCity_HotSprings_EventScript_HotSpringF {
	lock
	trainerbattle_single(
		TRAINER_WAKAE,
		format("{CREATE_MUGSHOT MUGSHOT_HOT_SPRING_F EMOTE_NORMAL}Don't talk to me! I forgot my towel!"),
		format("Will you leave now?")
	)
	setspeaker(SP_NAME_HOT_SPRING_GAL)
